<h1>Create a new listing</h1>

<%= form_with scope: :listing, url: user_listings_path, local: true do |form| %>
  <p>
    <%= form.label :name %> <br>
    <%= form.text_field :name %>
  </p>
  <p>
    <%= form.label :description %> <br>
    <%= form.text_area :description %>
  </p>
  <p>
    <%= form.label :'Price Per Night' %> <br>
    <%= form.number_field :price_per_night %>
  </p>
  <p>
   <%= form.submit "Save" %>
  </p>
<% end %>
